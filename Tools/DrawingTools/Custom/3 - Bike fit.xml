<?xml version="1.0" encoding="utf-8"?>
<KinoveaPostureTool>
  <FormatVersion>1.0</FormatVersion>
  <Name>Bikefit</Name>
  <DisplayName>DrawingName_Bikefit</DisplayName>
  <Id>02a52d37-4694-4b90-a6d4-58d2a399638c</Id>
  <PointCount>8</PointCount>
  <Segments>
    <Segment point1="0" point2="1" name="Head" style="Solid" width="2" color="#dc322f"/>
    <Segment point1="1" point2="2" name="Arm" style="Solid" width="2" color="#b58900"/>
    <Segment point1="2" point2="3" name="Forearm" style="Solid" width="2" color="#dc322f"/>
    <Segment point1="1" point2="4" name="Torso" style="Solid" width="2" color="#268bd2"/>
    <Segment point1="4" point2="5" name="Thigh" style="Solid" width="2" color="#d33682"/>
    <Segment point1="5" point2="6" name="Leg" style="Solid" width="2" color="#6c71c4"/>
    <Segment point1="6" point2="7" name="Foot" style="Solid" width="2" color="#2aa198"/>
  </Segments>
  <Angles>
  	<!-- Angle directions for a bike looking to the right. -->
    <Angle name="arm/torso" origin="1" leg1="4" leg2="2" signed="true" ccw="true" supplementary="false" radius="30" color="#b58900"/>
    <Angle name="knee"      origin="5" leg1="4" leg2="6" signed="true" ccw="true" supplementary="false" radius="40" color="#d33682"/>
    <Angle name="hip"       origin="4" leg1="1" leg2="5" signed="true" ccw="false" supplementary="false" radius="30" color="#268bd2"/>
    <Angle name="elbow"     origin="2" leg1="1" leg2="3" signed="true" ccw="false" supplementary="false" radius="20" color="#dc322f"/>
    <Angle name="ankle"     origin="6" leg1="5" leg2="7" signed="true" ccw="false" supplementary="false" radius="20" color="#6c71c4"/>
  </Angles>
  <Handles>
    <Handle type="Point" name="head" reference="0" trackable="true" color="#dc322f">
      <Constraint type="DistanceToPoint" optionGroup="Lock segments lengths">
        <DistanceToPoint point="1"/>
      </Constraint>
    </Handle>
    <Handle type="Point" name="shoulder" reference="1" trackable="true" color="#b58900">
      <Constraint type="DistanceToPoint" optionGroup="Lock segments lengths">
        <DistanceToPoint point="4"/>
      </Constraint>
      <Impacts>
        <KeepAngle origin="1" leg1="4" leg2="0"/>
	      <KeepAngle origin="1" leg1="4" leg2="2"/>
	      <KeepAngle origin="2" leg1="1" leg2="3"/>
      </Impacts>
    </Handle>	
    <Handle type="Point" name="elbow" reference="2" trackable="true" color="#dc322f">
      <Constraint type="DistanceToPoint" optionGroup="Lock segments lengths">
        <DistanceToPoint point="1"/>
      </Constraint>
      <Impacts>
        <KeepAngle origin="2" leg1="1" leg2="3"/>
      </Impacts>
    </Handle>
    <Handle type="Point" name="wrist" reference="3" trackable="true" color="#dc322f">
      <Constraint type="DistanceToPoint" optionGroup="Lock segments lengths">
        <DistanceToPoint point="2"/>
      </Constraint>
    </Handle>
    <Handle type="Point" name="hip" reference="4" trackable="true" color="#268bd2">
      <Constraint type="DistanceToPoint" optionGroup="Lock segments lengths">
        <DistanceToPoint point="1"/>
      </Constraint>
      <Impacts>
        <KeepAngle origin="4" leg1="1" leg2="5"/>
        <KeepAngle origin="5" leg1="4" leg2="6"/>
        <KeepAngle origin="6" leg1="5" leg2="7"/>
      </Impacts>
    </Handle>
    <Handle type="Point" name="knee" reference="5" trackable="true" color="#d33682">
      <Constraint type="DistanceToPoint" optionGroup="Lock segments lengths">
        <DistanceToPoint point="4"/>
      </Constraint>
      <Impacts>
        <KeepAngle origin="5" leg1="4" leg2="6"/>
        <KeepAngle origin="6" leg1="5" leg2="7"/>
      </Impacts>
    </Handle>
    <Handle type="Point" name="ankle" reference="6" trackable="true" color="#6c71c4">
      <Constraint type="DistanceToPoint" optionGroup="Lock segments lengths">
        <DistanceToPoint point="5"/>
      </Constraint>
      <Impacts>
        <KeepAngle origin="6" leg1="5" leg2="7"/>
      </Impacts>
    </Handle>
    <Handle type="Point" name="foot" reference="7" trackable="true" color="#2aa198">
      <Constraint type="DistanceToPoint" optionGroup="Lock segments lengths">
        <DistanceToPoint point="6"/>
      </Constraint>
  	</Handle>
  </Handles>
  <InitialConfiguration>
    <Point>200;200</Point> <!-- tip of head -->
    <Point>160;210</Point> <!-- shoulder -->
    <Point>180;270</Point> <!-- elbow -->
    <Point>210;330</Point> <!-- hand -->
    <Point>50;260</Point> <!-- hip -->
    <Point>110;300</Point> <!-- knee -->
    <Point>40;420</Point> <!-- ankle or heel-->
    <Point>60;450</Point> <!-- tip of foot -->
  </InitialConfiguration>
  <Capabilities flipHorizontal="true"/>
  <Icon>
  </Icon>
</KinoveaPostureTool>